    "from notebook_context import *  # Your setup\n",
    "import pandas as pd\n",
    "import numpy as np\n",
    "from nba_api.stats.endpoints import leaguegamelog  # Live API\n",
    "\n",
    "# New: Quantum ensemble for data (run multiple fetches, average with noise)\n",
    "def quantum_ensemble_fetch(season, num_ensembles=3):
    \"\"\"Fetch data multiple times, average with noise for quantum inspiration.\"\"\"\n",
    "    dfs = []\n",
    "    for _ in range(num_ensembles):
        log = leaguegamelog.LeagueGameLog(season=season)\n",
    "        df = log.get_data_frames()[0]\n",
    "        noise = np.random.normal(1.0, 0.02, len(df))  # Quantum noise\n",
    "        df['PTS'] = df['PTS'] * noise  # Apply to scores\n",
    "        dfs.append(df)\n",
    "    ensemble_df = pd.concat(dfs).groupby(level=0).mean()  # Average ensembles\n",
    "    return ensemble_df\n",
    "\n",
    "# Fetch historical + live merge\n",
    "seasons = ['2015-16', '2016-17', '2017-18', '2018-19', '2019-20', '2020-21', '2021-22', '2022-23', '2023-24', '2025-26']  # Your 10 years\n",
    "all_data = []\n",
    "for season in seasons:
    "    df = quantum_ensemble_fetch(season)\n",
    "    all_data.append(df)\n",
    "historical_df = pd.concat(all_data)\n",
    "\n",
    "# Merge with local CSV if exists\n",
    "local_path = 'data/raw/Team_Stats.csv'  # Your large file\n",
    "if os.path.exists(local_path):
    "    local_df = pd.read_csv(local_path)
    "    historical_df = pd.merge(historical_df, local_df, how='outer')  # Combine\n",
    "\n",
    "historical_df.to_csv('data/merged_historical_data.csv', index=False)\n",
    "print(f\"Fetched and merged {len(historical_df)} games with quantum ensembles.\")"
   ]
